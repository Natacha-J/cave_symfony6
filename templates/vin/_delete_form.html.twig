<form method="post" action="{{ path('vin_delete', {'codevin': vin.codevin}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer le vin {{ vin.codevin }}?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ vin.codevin) }}">
    <button class="btn-suppr"><i class="far fa-times-circle"></i></button>
</form>
