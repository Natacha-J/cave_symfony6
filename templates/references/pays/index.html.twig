{% extends 'base.html.twig' %}

{% block title %}Pays
{% endblock %}

{% block body %}
	<h1>Liste des pays</h1>

	<a href="{{ path('pays_new') }}">Ajouter un pays</a>

	<div>
		<input id="search_input" type="text" placeholder="rechercher un pays">
		<button id="search_btn" type="button" onclick='searchItems()'>rechercher</button>
		<button hidden id="clear_btn" type="button" onclick="searchClear()">Afficher tout</button>
	</div>

	<table class="table">
		<thead>
			<tr>
				<th>Code</th>
				<th>Nom</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for pays in lesPays %}
				<tr>
					<td>{{ pays.codepays }}</td>
					<td>{{ pays.nompays }}</td>
					<td>
						<a href="{{ path('pays_edit', {'codepays': pays.codepays}) }}">
							<i class="fas fa-pen"></i>
						</a>
					</td>
					<td>
						{{ include('references/pays/_delete_form.html.twig') }}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">Pas de r√©sultats</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}

{% block javascripts %}
	<script src="{{ asset('js/searchBar.js') }}"></script>
{% endblock %}

