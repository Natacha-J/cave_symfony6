{% extends 'base.html.twig' %}

{% block title %}Appellations
{% endblock %}

{% block body %}
	<h1>Listes des appellations</h1>

	<a href="{{ path('appellation_new') }}">Ajouter une appellation</a>

	<div>
		<input id="search_input" type="text" placeholder="rechercher une appellation">
		<button id="search_btn" type="button" onclick='searchItems()'>rechercher</button>
		<button hidden id="clear_btn" type="button" onclick="searchClear()">Afficher tout</button>
	</div>

	<table class="table">
		<thead>
			<tr>
				<th>Code</th>
				<th>Nom</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for appellation in appellations %}
				<tr>
					<td>{{ appellation.codeappellation }}</td>
					<td>{{ appellation.nomappellation }}</td>
					<td>
						<a href="{{ path('appellation_edit', {'codeappellation': appellation.codeappellation}) }}">
							<i class="fas fa-pen"></i>
						</a>
					</td>
					<td>
						{{ include('references/appellation/_delete_form.html.twig') }}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">Pas de r√©sultats</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('js/searchBar.js') }}"></script>
{% endblock %}
