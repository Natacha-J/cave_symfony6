<form method="post" action="{{ path('region_delete', {'coderegion': region.coderegion}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer la région {{ region.coderegion }} ?');">

    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ region.coderegion) }}">
<button class="btn-suppr">
	<i class="far fa-times-circle"></i>
</button>
</form>
