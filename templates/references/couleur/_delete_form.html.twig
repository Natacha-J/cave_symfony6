<form method="post" action="{{ path('couleur_delete', {'codecouleur': couleur.codecouleur}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer la couleur {{ couleur.codecouleur }} ?');">

    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ couleur.codecouleur) }}">
<button class="btn-suppr">
	<i class="far fa-times-circle"></i>
</button>

</form>
